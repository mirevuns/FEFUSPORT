<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Fefusport.Display" parent="@android:style/TextAppearance.Material">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/modern_text_primary</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="Fefusport.Title" parent="@android:style/TextAppearance.Material.Large">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/modern_text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Fefusport.Body" parent="@android:style/TextAppearance.Material.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/modern_text_muted</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Fefusport.Caption" parent="@android:style/TextAppearance.Material.Small">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/modern_text_muted</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Fefusport.ModernButton" parent="@style/Widget.Material3.Button">
        <item name="android:background">@drawable/bg_modern_button</item>
        <item name="android:textColor">@color/modern_canvas</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Fefusport.ModernTextField" parent="@style/Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/box_stroke_color</item>
        <item name="boxBackgroundColor">@color/modern_surface</item>
        <item name="android:textColor">@color/modern_text_primary</item>
        <item name="hintTextColor">@color/modern_text_muted</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
    </style>

    <style name="Fefusport.ModernChip" parent="@style/Widget.Material3.Chip.Assist">
        <item name="android:background">@drawable/bg_modern_chip</item>
        <item name="android:textColor">@color/modern_text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Fefusport.BottomNavigation" parent="@style/Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/modern_text_primary</item>
        <item name="itemTextColor">@color/modern_text_primary</item>
        <item name="android:background">@drawable/bg_modern_nav</item>
    </style>

    <style name="Fefusport.ModernTab" parent="@style/Widget.Material3.TabLayout">
        <item name="tabTextAppearance">@style/Fefusport.Body</item>
        <item name="tabIndicator">@drawable/bg_modern_tab_indicator</item>
        <item name="tabTextColor">@color/modern_text_muted</item>
        <item name="tabSelectedTextColor">@color/modern_text_primary</item>
    </style>
</resources>

