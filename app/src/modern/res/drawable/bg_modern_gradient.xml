<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#030A1A"
                android:endColor="#0F2650"
                android:type="linear"
                android:angle="270" />
        </shape>
    </item>
    <item android:gravity="top">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#66183F73"
                android:endColor="@android:color/transparent"
                android:type="linear"
                android:angle="180" />
        </shape>
    </item>
</layer-list>

