<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_modern_gradient"
    android:padding="24dp"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_modern_chip"
            android:padding="12dp"
            android:src="@drawable/arrow_back"
            android:contentDescription="@string/modern_back"
            android:tint="@color/modern_primary"
            android:layout_marginTop="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/enter"
            style="@style/Fefusport.Display"
            android:layout_marginStart="12dp"
            android:text="@string/modern_registration_title"
            app:layout_constraintStart_toEndOf="@id/back"
            app:layout_constraintTop_toTopOf="@id/back"
            app:layout_constraintBottom_toBottomOf="@id/back" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/firstname"
            style="@style/Fefusport.ModernTextField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Логин"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="@color/modern_text_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/secondname"
            style="@style/Fefusport.ModernTextField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Имя или никнейм"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/firstname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="@color/modern_text_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/thirdname"
            style="@style/Fefusport.ModernTextField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Пароль"
            android:layout_marginTop="16dp"
            app:endIconMode="password_toggle"
            app:layout_constraintTop_toBottomOf="@id/secondname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/modern_text_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fourthname"
            style="@style/Fefusport.ModernTextField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Повторите пароль"
            android:layout_marginTop="16dp"
            app:endIconMode="password_toggle"
            app:layout_constraintTop_toBottomOf="@id/thirdname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/modern_text_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/sex"
            style="@style/Fefusport.Title"
            android:layout_marginTop="24dp"
            android:text="Пол"
            app:layout_constraintTop_toBottomOf="@id/fourthname"
            app:layout_constraintStart_toStartOf="parent" />

        <RadioGroup
            android:id="@+id/group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/sex"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Мужской"
                android:textColor="@color/modern_text_primary"
                android:buttonTint="@color/modern_primary" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Женский"
                android:textColor="@color/modern_text_primary"
                android:buttonTint="@color/modern_primary" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Другое"
                android:textColor="@color/modern_text_primary"
                android:buttonTint="@color/modern_primary" />
        </RadioGroup>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button"
            style="@style/Fefusport.ModernButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/modern_registration_action"
            app:layout_constraintTop_toBottomOf="@id/group"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/terms"
            style="@style/Fefusport.Caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Нажимая на кнопку, вы соглашаетесь с условиями сервиса FefuFlow."
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

