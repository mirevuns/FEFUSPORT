<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_modern_gradient"
    android:padding="20dp"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.Group
        android:id="@+id/selectionState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="mapPlaceholder,readyText,activityTypeRecyclerView,startButton,heroPill" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/activeState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="activeMapPlaceholder,timerText,activityTypeText,pauseButton,finishButton,statsCard" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/heroPill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:layout_marginTop="56dp"
        app:cardBackgroundColor="@color/modern_surface"
        app:cardCornerRadius="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            style="@style/Fefusport.Caption"
            android:text="Новая сессия"
            android:textAllCaps="false" />
    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/mapPlaceholder"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/activity_icon"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_modern_card"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/heroPill"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/readyText"
        style="@style/Fefusport.Title"
        android:layout_marginTop="20dp"
        android:text="Приготовьтесь!"
        app:layout_constraintTop_toBottomOf="@id/mapPlaceholder"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activityTypeRecyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingVertical="4dp"
        android:paddingEnd="12dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/readyText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_activity_type" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/startButton"
        style="@style/Fefusport.ModernButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Запустить трекер"
        app:layout_constraintTop_toBottomOf="@id/activityTypeRecyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/activeMapPlaceholder"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/bg_modern_card"
        android:padding="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/activity_icon"
        app:layout_constraintTop_toBottomOf="@id/heroPill"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/timerText"
        style="@style/Fefusport.Display"
        android:layout_marginTop="20dp"
        android:text="00:00:00"
        app:layout_constraintTop_toBottomOf="@id/activeMapPlaceholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/activityTypeText"
        style="@style/Fefusport.Body"
        android:layout_marginTop="12dp"
        android:text="Беговая тренировка"
        app:layout_constraintTop_toBottomOf="@id/timerText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/statsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        app:cardBackgroundColor="@color/modern_surface"
        app:cardCornerRadius="24dp"
        app:layout_constraintTop_toBottomOf="@id/activityTypeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/Fefusport.Caption"
                    android:text="Дистанция" />

                <TextView
                    style="@style/Fefusport.Title"
                    android:text="0,00 км" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/Fefusport.Caption"
                    android:text="Скорость" />

                <TextView
                    style="@style/Fefusport.Title"
                    android:text="0'00''" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/statsCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/pauseButton"
            style="@style/Fefusport.ModernButton"
            android:layout_width="0dp"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:text="Пауза" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/finishButton"
            style="@style/Fefusport.ModernButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Завершить"
            android:backgroundTint="@color/modern_secondary"
            android:textColor="@color/modern_text_primary" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

